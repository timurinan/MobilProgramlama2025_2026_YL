<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_adsoyad_ekleme"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Müşteri Adı Soyadı"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_mail_ekleme"
        app:layout_constraintStart_toStartOf="@+id/txt_mail_ekleme"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_mail_ekleme"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:hint="Müşteri Maili"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txt_telefon_ekleme"
        app:layout_constraintStart_toStartOf="@+id/txt_telefon_ekleme"
        app:layout_constraintTop_toBottomOf="@+id/txt_adsoyad_ekleme" />

    <EditText
        android:id="@+id/txt_telefon_ekleme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="Müşteri Telefonu"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/btn_kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mail_ekleme" />

    <Button
        android:id="@+id/btn_kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_telefon_ekleme" />
</androidx.constraintlayout.widget.ConstraintLayout>